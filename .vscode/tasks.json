{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "gcc",
                "args": [
                    "test/tcp_server.c",

                    "-Wall", "-lpthread",
                    "-o", "test/server.out"
                ],
                "problemMatcher": "$gcc"
            },
            "windows": {
                "command": "cl",
                "args": [
                    "test/tcp_server.c",

                    "/nologo", "/W3", "/Zi",
                    "/Fo:test/", "/Fd:test/",

                    "/link",
                    "WS2_32.lib",
                    "/out:test/server.exe"
                ],
                "problemMatcher": "$msCompile"
            }
        },
        {
            "label": "build client",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "gcc",
                "args": [
                    "test/tcp_client.c",

                    "-Wall", "-lpthread",
                    "-o", "test/client.out"
                ],
                "problemMatcher": "$gcc"
            },
            "windows": {
                "command": "cl",
                "args": [
                    "test/tcp_client.c",

                    "/nologo", "/W3", "/Zi",
                    "/Fo:test/", "/Fd:test/",

                    "/link",
                    "WS2_32.lib",
                    "/out:test/client.exe"
                ],
                "problemMatcher": "$msCompile"
            }
        }
    ]
}